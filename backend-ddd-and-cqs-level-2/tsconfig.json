{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es6", "dom"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "baseUrl": "./src/",
    "paths": {
      "@core/*": ["core/*"],
      "@config/*": ["config/*"],
      "@constants/*": ["constants/*"],
      "@domain/*": ["domain/*"],
      "@app/*": ["app/*"],
      "@infra/*": ["infra/*"],
      "@interfaces/*": ["interfaces/*"]
    },
    "types": ["reflect-metadata"],
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": ["node_modules"]
}
